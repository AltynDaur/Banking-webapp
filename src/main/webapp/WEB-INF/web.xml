    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.epam.javalab.webapp.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/controller/admin/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>UTFFilter</filter-name>
        <filter-class>com.epam.javalab.webapp.filter.UTFFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UTFFilter</filter-name>
        <url-pattern>/controller/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>com.epam.javalab.webapp.exception.ErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/exception</url-pattern>
    </servlet-mapping>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/exception</location>
    </error-page>
</web-app>
